# Django Settings
SECRET_KEY=your-secret-key-here-generate-a-random-string
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database - PostgreSQL (Neon or Local)
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=your_database_host
DB_PORT=5432

# JWT Secret for authentication
JWT_SECRET=your-jwt-secret-here-should-be-different-from-secret-key

# Google Maps API Configuration
# Client-side API key (with HTTP referrer restrictions for Maps JavaScript API)
# Restricted to: http://localhost:3000/* and your production domain
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Server-side API key (with IP restrictions or no restrictions for server APIs)
# Used for: Geocoding, Directions, Distance Matrix APIs
GOOGLE_MAPS_SERVER_API_KEY=your_google_maps_server_api_key_here

# Resend Email Service (for password reset OTP)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key_here

# Email sender - Use onboarding@resend.dev for testing or your verified domain
EMAIL_FROM=onboarding@resend.dev

# App Configuration
NODE_ENV=development
